{
  "name": "libsql-tools",
  "version": "1.0.0",
  "description": "A collection of tools and utilities for LibSQL",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "publish": "pnpm -r publish",
    "build:watch": "pnpm -r --parallel dev",
    "build:prod": "pnpm -r build --minify",
    "build:analyze": "pnpm -r build --sourcemap",
    "rss": "pnpm --filter @libsql-tools/cli exec rss-loader",
    "vectorstore": "pnpm --filter @libsql-tools/cli exec libsql-vectorstore",
    "tools": "pnpm --filter @libsql-tools/cli exec libsql-tools",
    "rss:load": "pnpm rss load",
    "rss:list": "pnpm rss list",
    "rss:test": "pnpm rss test",
    "vectorstore:init": "pnpm vectorstore init",
    "vectorstore:add": "pnpm vectorstore add",
    "vectorstore:search": "pnpm vectorstore search",
    "vectorstore:stats": "pnpm vectorstore stats",
    "help": "echo 'Available commands:' && echo '  pnpm rss --help' && echo '  pnpm vectorstore --help' && echo '  pnpm tools --help'"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@libsql-tools/cli": "workspace:*"
  },
  "keywords": [
    "libsql",
    "database",
    "rss",
    "vectorstore",
    "embeddings",
    "tools",
    "utilities"
  ],
  "author": "Your Name",
  "license": "MIT"
}