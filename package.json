{
  "name": "context7-playwright-extension",
  "displayName": "Context7 Playwright Extension",
  "description": "VS Code extension using Context7 MCP and Playwright for code lookup and generation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:context7-playwright.lookup",
    "onCommand:context7-playwright.generate",
    "onCommand:context7-playwright.browse"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "context7-playwright.lookup",
        "title": "Context7: Lookup Code",
        "category": "Context7 Playwright"
      },
      {
        "command": "context7-playwright.generate",
        "title": "Context7: Generate Code",
        "category": "Context7 Playwright"
      },
      {
        "command": "context7-playwright.browse",
        "title": "Context7: Browse Documentation",
        "category": "Context7 Playwright"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "context7-playwright",
          "title": "Context7 Playwright",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "context7-playwright": [
        {
          "id": "context7-lookup",
          "name": "Code Lookup"
        },
        {
          "id": "context7-generator",
          "name": "Code Generator"
        },
        {
          "id": "context7-browser",
          "name": "Documentation Browser"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build:webview": "pnpm run build:tailwind && pnpm run build:webpack",
    "build:tailwind": "tailwindcss -i ./src/webview/input.css -o ./out/webview/styles.css --watch",
    "build:webpack": "webpack --mode development",
    "build:webpack:prod": "webpack --mode production"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.0.0",
    "mini-css-extract-plugin": "^2.7.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "@langchain/core": "^0.1.0",
    "@langchain/openai": "^0.0.14",
    "langchain": "^0.1.0",
    "node-fetch": "^3.3.0",
    "playwright": "^1.40.0"
  }
}